			"(.*) - Vivaldi": "üåé $1",
			"(.*) - fish": "> [$1]"
		},
		"max-length": 200,
		"separate-outputs": true
	},
	"battery": {
		"bat": "BAT0",
		"interval": 60,
		"states": {
			"warning": 30,
			"critical": 15
		},
		"format": "{capacity}% {icon}",
