#!/usr/bin/env bash

# Update the package index
doas pacman -Sy > /dev/null

# Check if an update is available for the linux-zen package
if doas pacman -Qu | rg -q linux-zen; then
  echo -n "Update available "
  doas pacman -Qu | rg "linux-zen " | cut -d ' ' -f 2- | sed 's/.zen1-1//; s/.zen2-1//'
else
  echo "No update available"
fi

